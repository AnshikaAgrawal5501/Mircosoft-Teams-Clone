<%- include('partials/header') -%>
    <link rel="stylesheet" href="/css/create_room.css">

    <div class="row">

        <div class="col-md-6">
            <img src="/images/create_room.jpg" alt="" class="img-fluid d-block mx-auto">
        </div>


        <div class="col-md-6 d-flex flex-column my-auto">
            <h1>Room Id - </h1>

            <div class="form-group">
                <input type="text" class="form-control" id="roomId" value="<%= roomId %>">

                <button type="button" class="btn share" data-toggle="modal" data-target="#myModal">
                <i class="fas fa-share-alt"></i>
              </button>
            </div>

            <div class="d-flex justify-content-center"><a class="btn btn-primary" href="/<%= roomId %>">Join</a></div>
        </div>
    </div>

    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">

                <!-- Modal body -->
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="p-5">
                        <div class="row">
                            <div class="col-6">Room Id</div>
                            <div class="col-6"><i class="far fa-copy" onclick="copyId()"></i></div>
                            <div class="col-6">Url</div>
                            <div class="col-6"><i class="far fa-copy" onclick="copyUrl()"></i></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <script src="/scripts/create_room.js"></script>

    <%- include('partials/footer') -%>